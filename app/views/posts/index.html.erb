<h1>Posts index</h1>
<div class="users_container">
  <div class="square"></div>
  <div class= "user-info">  
    <h1><%= @user.name %></h1> 
    <p class="posts-number"><strong>Number of posts:</strong><%= @user.posts_count %></p>

  </div>
</div>
<% @user.posts.each do |post| %>
  <%= link_to user_post_path(:id => post.id ) do %>
  <div class="user-posts">
  <p><%=post.title %></p>
  <p><%=post.text %></p>
  <div class="counters">
    <p><strong><%= post.likes.count %> <%= (post.likes.count) <= 1 ? 'Like' : 'Likes'%></strong></p>  
    <p><strong>Comments:</strong> <%=post.comments_counter%></p>
  </div>
</div>
<%end%>
<% if post.comments_counter > 0 %>
<%= link_to user_post_path(:id => post.id ) do %>
<div class= "comments user-posts">
  <% @comments.each do |comment| %>
    <% if comment.post_id == post.id %>
        <div class= "comment">
          <%=comment.text %>
        </div>
    <%end%>
  <%end%>
</div>
<% end %>
<% end %>

<% end %>
