<h1>Create a new post</h1>
<% if @post.errors.any? %>
  <h2>The following errors prevented the post from saving: </h2>
  <ul>
  <% @post.errors.full_messages.each do |msg|%>
    <li><%= msg %></li>
  <%end%>
  </ul>
<%end%>

<%= form_with scope: :post, data: { turbo: false }, url: user_posts_path, local: true do |f| %>
<p>
  <%= f.label :title %></br>
  <%= f.text_field :title %>
</p>
<p> 
  <%= f.label :text %></br>
  <%= f.text_area :text%>
</p>
<p>
  <%= f.submit %>
</p>

<%end%>