<!DOCTYPE html>
<html>
  <head>
    <title>BlogApp</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>

  <body>
    <% if request.fullpath == "/users/sign_in" %>
      <style>
        .auth-btns {
           display: none;
          }
      </style>
    <% end %>
    <div class="auth-btns">
    <%= button_to "Sign in", new_user_session_path, method: :post, data: { turbo: false }  %>
    <%= button_to "Sign out", destroy_user_session_path, method: :delete, data: { turbo: false }  %>
    <%= button_to "Sign up", new_user_registration_path, method: :get, data: { turbo: false }  %>
    </div>
    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>
    <% flash.each do |key, value| %>
      <div class="alert alert-<%= key %>">
        <%= value %>
      </div>
    <% end %>
    <%= yield %>
  </body>
</html>
