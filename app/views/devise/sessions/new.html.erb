 

<%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: 'login' }) do |f| %>
  <div class="field login">
    <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Enter your email" %>
  </div>

  <div class="field login">
    <%= f.password_field :password, autocomplete: "current-password", placeholder: "Enter your password" %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field rememberbox">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end %>

  <div class="actions login-btn">
    <%= f.submit "Log in" %>
  </div>
<% end %>

<div class= "links-bottom">
<%= render "devise/shared/links" %>
</div>